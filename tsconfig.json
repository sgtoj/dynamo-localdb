{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noLib": false,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "declarationDir": "declaration",
        "allowJs": false,
        "pretty": true,
        "watch": false,
        "sourceMap": true,
        "strictNullChecks": true,
        "outDir": "lib"
    },
    "exclude": [
        "declaration/",
        "node_modules/",
        "lib/",
        "test/",
        "tmp/",
        "*.js"
    ]
}